          <% end %>

          <% if @ideals.present? && @ideals.partner.present? %>
          <!--理想のパートナーが作成されている場合-->
            <%= link_to "理想のパートナー", record_ideals_path(partner: true), class: "list-group-item list-group-item-action list-group-item-success" %>

          <% else %>
          <!--理想のパートナーが作成されていない場合-->
            <%= link_to "理想のパートナーを想像する", partner_new_ideals_path, class: "list-group-item list-group-item-action list-group-item-primary" %>
          <% end %>

          <% if @ideals.present? && @ideals.role_model.present? %>
          <!--理想のロールモデルが作成されている場合-->
            <%= link_to "理想のロールモデル", record_ideals_path(role_model: true), class: "list-group-item list-group-item-action list-group-item-success" %>

          <% else %>
          <!--理想のロールモデルが作成されていない場合-->
