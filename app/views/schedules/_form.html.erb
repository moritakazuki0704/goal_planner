<!--左のページ-->
<div class="left-page col text-center m-5 p-5">
  <div>
    <h5 class="smart-frame mb-5">
      <u>
        どの目標に対する予定か選んでください
      </u>
    </h5>
  </div>
  <div class="scroll-box">
    <%= f.collection_radio_buttons(:problem_id, problems, :id, :commitment) do |b| %>
      <div class="masking-tape custom-control custom-radio">
        <%= b.radio_button(class: "custom-control-input") %>
        <%= b.label(class: "custom-control-label") %>
      </div>
    <% end %>
  </div>
</div>

<!--右のページ-->
<div class="right-page text-center col m-5 p-5">
  <div class="form-group">
    <%= f.label :title, class: "smart-frame h5" %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>
  <div class="form-group custom-control custom-switch text-left">
    <%= f.check_box :is_all_day , {class: "custom-control-input" } , "true" , "false" %>
    <%= f.label :is_all_day, class: "custom-control-label" %>
  </div>
  <div class="form-group input-group-prepend">
    <%= f.label :start_time, class: "input-group-text" %>
    <%= f.date_field :start_date, required: true, class: 'form-control' %>
    <%= f.time_field :start_time, class: 'form-control' %>
  </div>
  <div class="form-group input-group-prepend">
    <%= f.label :end_time, class: "input-group-text" %>
    <%= f.date_field :end_date, class: 'form-control' %>
    <%= f.time_field :end_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "smart-frame h5" %>
    <%= f.text_area :body,rows: "3",class: "form-control" %>
  </div>
    <%= f.submit "登録",class: "btn btn-lg btn-outline-primary" %>
</div>
