<div class="container-fluid">
  <div class="row justify-content-center open-book my-4 py-3">

    <!--左のページ-->
    <div class="left-page col text-center m-5 p-5">
      <div class="card">
        <div class="card-header">
          <%= @problem.commitment %>
        </div>
        <div class="card-body">
          <%= safe_join(@problem.purpose.split("\n"),tag(:br)) %>
        </div>
        <div class="card-footer d-flex justify-content-around">
          <%= form_with model: @problem, url: problem_path(@problem), method: :patch do |f| %>
            <div class="form-check form-check-inline">
              <%= f.radio_button :progress_status, 0, class: "form-check-input" %>
              <%= f.label :progress_statuses_i18n, Plan.progress_statuses_i18n[:progress], class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :progress_status, 1, class: "form-check-input" %>
              <%= f.label :progress_statuses_i18n, Plan.progress_statuses_i18n[:finish], class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :progress_status, 2, class: "form-check-input" %>
              <%= f.label :progress_statuses_i18n, Plan.progress_statuses_i18n[:pending], class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.submit "保存する",class: "btn btn-secondary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>

      <% if @problem.schedules.present? %>
      <div>
        <p>課題件数：<%= @problem.schedules.count %></p>
      </div>

      <!--タブ表示機能-->
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <a class="nav-item nav-link active btn btn-outline-primary" id="nav-pending-tab" data-toggle="tab" href="#nav-pending" role="tab" aria-controls="nav-pending" aria-selected="true">未設定</a>
          <a class="nav-item nav-link btn btn-outline-success" id="nav-completion-tab" data-toggle="tab" href="#nav-completion" role="tab" aria-controls="nav-completion" aria-selected="false">完了</a>
          <a class="nav-item nav-link btn btn-outline-info" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">未完了</a>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">

        <!--未設定の課題のタブ-->
        <div class="tab-pane fade show active" id="nav-pending" role="tabpanel" aria-labelledby="nav-pending-tab">
          <h5 class="smart-frame">
            <u>
              未設定課題件数：<%= @problem.schedules.pending.count %>
            </u>
          </h5>
          <div class="cross-frame font-weight-bold">
            <p>
              詳細内容と日付が未入力な予定<br>
              タイトルをクリックして詳細を設定してください
            </p>

            <!--スクロール機能-->
            <div class="scroll-box">
              <% @problem.schedules.pending.each do |pending| %>
                <ul class="list-group">
                  <%= link_to edit_schedule_path(pending), class: "list-group-item list-group-item-action list-group-item-success" do %>
                    <%= pending.title %>
                  <% end %>
                </ul>
              <% end %>
            </div>

          </div>
        </div>

        <!--完了した課題のタブ-->
        <div class="tab-pane fade" id="nav-completion" role="tabpanel" aria-labelledby="nav-completion-tab">
          <h5 class="smart-frame">
            <u>
              完了課題件数：<%= @problem.schedules.completion.count %>
            </u>
          </h5>
          <div class="cross-frame font-weight-bold">
            <p>
              終わった予定
            </p>

            <!--スクロール機能-->
            <div class="scroll-box">
              <% @problem.schedules.completion.each do |completion| %>
                <ul class="list-group">
                  <%= link_to schedule_path, class: "list-group-item list-group-item-action list-group-item-success" do %>
                    <%= completion.title %>
                  <% end %>
                  <li class="list-group-item list-group-item-success">
                    <%= completion.start_time.strftime("%Y年%-m月%-d日 %-H時%M分") %>　〜　<%= completion.finish_time.strftime("%Y年%-m月%-d日 %-H時%M分") %>
                  </li>
                </ul>
              <% end %>
            </div>

          </div>
        </div>

        <!--未完了の課題のタブ-->
        <div class="tab-pane fade" id="nav-imperfect" role="tabpanel" aria-labelledby="nav-imperfect-tab">
          <h5 class="smart-frame">
            <u>
              未完了課題件数：<%= @problem.schedules.imperfect.count %>
            </u>
          </h5>
          <div class="cross-frame font-weight-bold">
            <p>
              将来の予定
            </p>

            <!--スクロール機能-->
            <div class="scroll-box">
              <% @problem.schedules.imperfect.each do |imperfect| %>
                <ul class="list-group">
                  <%= link_to schedule_path, class: "list-group-item list-group-item-action list-group-item-success" do %>
                    <%= imperfect.title %>
                  <% end %>
                  <li class="list-group-item list-group-item-success">
                    <%= imperfect.start_time.strftime("%Y年%-m月%-d日 %-H時%M分") %>　〜　<%= imperfect.finish_time.strftime("%Y年%-m月%-d日 %-H時%M分") %>
                  </li>
                </ul>
              <% end %>
            </div>

          </div>
        </div>

        <div class="d-flex justify-content-around my-3">
          <%= link_to "戻る",problems_path, class: "btn btn-info" %>
        </div>
      </div>
      <% end %>
    </div>

    <!--右のページ-->
    <div class="right-page col text-center m-5 p-5">
      <h5 class="smart-frame mb-5">
        <u>
          目標を叶えるためにするべきことを<br>
          教えてください
        </u>
      </h5>
      <%= form_with model: [@problem,@mission],url: problem_missions_path(@problem), method: :post do |f| %>
        <div class="form-inline">
          <%= f.text_field :memo,class: "form-control" %>
          <%= f.submit "メモする",class: "btn btn-secondary btn-sm" %>
        </div>
      <% end %>

      <% if @problem.missions.present? %>
        <h5 class="smart-frame">
          <u>
            メモ件数：<%= @problem.missions.count %>
          </u>
        </h5>
        <div class="cross-frame font-weight-bold">

          <!--スクロール機能-->
          <div class="scroll-box">
            <% @problem.missions.mission.each do |mission| %>
              <ul class="list-group">
                <li class="list-group-item">
                  <p>
                    <%= mission.memo %>
                  </p>
                  <span class="list-group-horizontal ml-auto">
                    <%= link_to "課題にする", upload_problem_mission_path(@problem,mission), method: :post %>
                    <%= link_to "削除する", problem_mission_path(@problem,mission), method: :delete %>
                  </span>
                </li>
              </ul>
              <% end %>
            </div>
          </div>

        <div class="d-flex justify-content-around my-3">
          <%= link_to "全て課題にする", bulk_upload_problem_missions_path(@problem), method: :post %>
          <%= link_to "メモを全て破棄する", bulk_destroy_problem_missions_path(@problem), method: :delete %>
        </div>
      <% end %>
    </div>

  </div>
</div>