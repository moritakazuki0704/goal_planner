<div class="container-fluid">
  <div class="book-cover row justify-content-center my-4">
    <div class="col-6 align-self-center my-5">
      <div class="smart-content text-center font-weight-bold">
        <h5>
          本を開くメールアドレスと<br>
          パスワードを教えてください
        </h5>
      </div>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="cross-frame text-center font-weight-bold">
          <% if alert %>
            <p class="alert"><%= alert %></p>
          <% end %>
          <div class="row">
            <div class="col px-5 mx-5">
              <div class="field form-group mt-3">
                <%= f.label :planner_name %>
                <%= f.text_field :planner_name, autofocus: true,class: "form-control" %>
              </div>
              <div class="field form-group">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="field form-group">
                <%= f.label :password %><br/>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field p-3 form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="actions d-flex justify-content-around p-3">
            <%= f.submit "ログイン", class: "btn btn-success" %>
            <%= link_to "前に戻る", root_path, class: "btn btn-info" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>